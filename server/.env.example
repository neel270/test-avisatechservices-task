# ==============================================
# BACKEND SERVER CONFIGURATION
# ==============================================

# Server Configuration
# --------------------
# Port on which the server will run
PORT=5000

# Environment (development, production, test)
NODE_ENV=development

# ==============================================
# JWT AUTHENTICATION
# ==============================================

# JWT Secret Key
# IMPORTANT: Change this to a strong random string in production!
# Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-random-64-chars

# JWT Token Expiration Time
# Examples: 1h, 7d, 30d, 90d
JWT_EXPIRES_IN=7d

# ==============================================
# DATABASE CONFIGURATION (MySQL)
# ==============================================

# Database Host
DB_HOST=localhost

# Database Port
DB_PORT=3306

# Database Name
# Create this database before running migrations:
# mysql -u root -p
# CREATE DATABASE task_management;
DB_NAME=task_management

# Database User
DB_USER=root

# Database Password
DB_PASSWORD=your-mysql-password

# Database Logging (true/false)
# Set to true to see SQL queries in console (useful for debugging)
DB_LOGGING=false

# ==============================================
# CORS CONFIGURATION
# ==============================================

# Frontend URL for CORS
# Change this to your frontend URL in production
CORS_ORIGIN=http://localhost:5173

# ==============================================
# RATE LIMITING
# ==============================================

# Maximum requests per window (default: 100)
RATE_LIMIT_MAX=100

# Time window in minutes (default: 15)
RATE_LIMIT_WINDOW=15

# ==============================================
# APPLICATION SETTINGS
# ==============================================

# API Version
API_VERSION=v1

# Upload Directory
UPLOAD_DIR=uploads

# Maximum file size in bytes (5MB)
MAX_FILE_SIZE=5242880
