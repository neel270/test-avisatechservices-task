# ==============================================
# FRONTEND APPLICATION CONFIGURATION
# ==============================================

# API Configuration
# -----------------
# Backend API Base URL
# In development: http://localhost:5000/api
# In production: https://your-domain.com/api
VITE_API_URL=http://localhost:5000/api

# ==============================================
# APPLICATION SETTINGS
# ==============================================

# Application Name
VITE_APP_NAME=Task Management

# Application Version
VITE_APP_VERSION=1.0.0

# Application Description
VITE_APP_DESCRIPTION=Full Stack Task Management Application

# ==============================================
# FEATURE FLAGS
# ==============================================

# Enable/Disable features (true/false)
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_SOCIAL_LOGIN=false
VITE_ENABLE_EMAIL_VERIFICATION=false

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================

# Enable Redux DevTools (true/false)
VITE_ENABLE_REDUX_DEVTOOLS=true

# Enable React Query DevTools (true/false)
VITE_ENABLE_QUERY_DEVTOOLS=true

# Enable Console Logs (true/false)
VITE_ENABLE_CONSOLE_LOGS=true

# ==============================================
# PAGINATION SETTINGS
# ==============================================

# Default items per page
VITE_DEFAULT_PAGE_SIZE=10

# Available page size options (comma-separated)
VITE_PAGE_SIZE_OPTIONS=5,10,20,50

# ==============================================
# FILE UPLOAD SETTINGS
# ==============================================

# Maximum file upload size in MB
VITE_MAX_FILE_SIZE_MB=5

# Allowed file types (comma-separated)
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ==============================================
# UI/UX SETTINGS
# ==============================================

# Default theme (light/dark)
VITE_DEFAULT_THEME=light

# Enable animations (true/false)
VITE_ENABLE_ANIMATIONS=true

# Toast notification duration in milliseconds
VITE_TOAST_DURATION=3000

# ==============================================
# IMPORTANT NOTES
# ==============================================
# 
# 1. All Vite environment variables MUST be prefixed with VITE_
# 2. After changing these values, restart the development server
# 3. Do NOT commit .env file with sensitive data to version control
# 4. Copy this file to .env and update with your values:
#    cp .env.example .env
# 5. For production, set appropriate values in your hosting environment
